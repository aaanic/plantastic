<h1>All articles</h1>

<div class="content-container">
  <div class="card-container">

<% @articles.each do |a| %>
  <div class="card">
    <%= link_to article_path(a) do %>
      <img class="card-img-top" src="<%= a.remote_image_url %>">
      <div class="card-body">
        <h5 class="card-category"><%= a.title %></h5>
      </div>
    <% end %>
  </div>
<% end %>

  </div>
</div>
<% if current_user && current_user.admin %>
  <p><%= link_to 'Add a new article', new_article_path %></p>
<% end  %>

