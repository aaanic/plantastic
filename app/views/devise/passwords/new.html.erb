<body class="green-banner">
<div class="banner-content reset-password">
  <div></div>
<h2>Forgot your password?</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs center-form">
        <%= f.input :email,
                required: false,
                label: false,
                autofocus: true,
                placeholder: "Email",
                input_html: { autocomplete: "email", class: "transparent-input" }  %>
  </div>

  <div class="form-actions center-form">
    <%= f.button :submit, "Reset password", class: "btn btn-black center" %>
  </div>
<% end %>
<div class="center-form">
 <%= link_to "Log in", new_session_path(resource_name), class: "btn-small btn-outline-black mini-margin" %>
</div>
<div class="center-form">
 <%= link_to "Sign up", new_registration_path(resource_name), class: "btn-small btn-outline-black mini-margin" %>
 </div>
</div>
</body>
