<body class="green-banner">
<div class="banner-content">
  <div></div>
<h1>Log in</h1>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs center-form">
    <%= f.input :email,
                required: false,
                label: false,
                autofocus: true,
                placeholder: "Email",
                input_html: { autocomplete: "email", class: "transparent-input" }  %>
    <%= f.input :password,
                required: false,
                label: false,
                placeholder: "Password",
                input_html: { autocomplete: "current-password", class: "transparent-input" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</body>
