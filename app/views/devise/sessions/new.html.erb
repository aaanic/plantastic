<body class="green-banner">
<div class="banner-content login">
  <div></div>
<h1>Log in</h1>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs center-form">
    <%= f.input :email,
                required: false,
                label: false,
                autofocus: true,
                placeholder: "Email",
                input_html: { autocomplete: "email", class: "transparent-input" }  %>
    <%= f.input :password,
                required: false,
                label: false,
                placeholder: "Password",
                input_html: { autocomplete: "current-password", class: "transparent-input" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions-login center-form">
    <%= f.button :submit, "Log in", class: "btn btn-black center" %>
  <div class="center-form">
<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", new_password_path(resource_name) %><br /><% end %>
  </div>
  </div>
<% end %>
<div class="center-form">
  <%= link_to new_registration_path(resource_name) do %>
  <button class ="btn btn-outline-black">Sign up</button>
  <% end %>

</div>
</div>
</body>
