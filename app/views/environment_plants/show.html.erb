<h1><%= @environment_plant.plant.name %></h1>
<img src='<%= @environment_plant.plant.remote_image_url %>' alt="">

<h2> <%= @environment_plant.plant.latin_name %> </h2>
<h5>  <%= @environment_plant.plant.category %></h5>
<p> <%= @environment_plant.nickname %></p>

<p><%= @environment_plant.plant.max_height %></p>
<p><%= @environment_plant.plant.care_level %></p>
<p> <%= @environment_plant.plant.light_preference %></p>

<p><%= @environment_plant.plant.description %></p>


<% if policy(EnvironmentPlant).destroy? %>
    <%= link_to "Delete", environment_plant_path, method: :delete %>
<% end %>

<% if policy(EnvironmentPlant).update? %>
<%= simple_form_for @environment_plant do |f| %>
  <%= f.input :nickname, placeholder: "Gary the Basil" %>
  <%= f.button :submit %>
<% end %>
<% end %>

<%= link_to "Back to Dashboard", dashboard_path %>

